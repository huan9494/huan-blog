<% @blogs.each do |blog| %>
  <li>
    <a href=<%= blog_path(blog.id) %>>
      <div class="row">
        <% if blog.promoted.eql?("promoted") %>
          <div class="promoted">
            <img src="/assets/promoted.png" alt="">
          </div>
        <% end %>
        <div class="blog">
          <div class="short-content">
            <p><%= blog.title %></p>
          </div>
          <div class="row">
            <div class="col-xs-6">
              <div class="category">
                <p><%= blog.category %></p>
              </div>
              <div class="publish-time">
                <p><%= blog.publish %></p>
              </div>
            </div>
            <div class="col-xs-6">
              <div class="col-xs-3 action">
                <img src="/assets/biglike.jpg" alt="">
                <span><p><%= blog.biglikes_count %></p></span>
              </div>
              <div class="col-xs-3 action">
                <span><img src="/assets/like.jpg" alt=""></span>
                <span><p><%= blog.likes_count %></p></span>
              </div>
              <div class="col-xs-3 action">
                <span><img src="/assets/dislike.jpg" alt=""></span>
                <span><p><%= blog.dislikes_count %></p></span>
              </div>
              <div class="col-xs-3 action">
                <span><img src="/assets/bigdislike.jpg" alt=""></span>
                <span><p><%= blog.bigdislikes_count %></p></span>
              </div>
            </div>
          </div>
        </div>
        <hr>
      </div>
    </a>
  </li>
<% end %>