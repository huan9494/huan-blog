<h4>Please confirm the following information before submit!</h4>
<div class="row">
  <%= link_to "Confirm",admin_blogs_path(blog: {title: @blog.title, body: @blog.body, published: @blog.published, promoted: @blog.promoted, publish: @blog.publish, image: @blog.image, category: @blog.category, author_name: @blog.author_name, author_position: @blog.author_position, author_name: @blog.author_age, author_avatar: @author_avatar}), method: :post, class: "btn btn-primary pull-right" %>
</div>

<div class="panel-body">
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <label class="form-title pull-right">Title</label>
        </div>
        <div class="col-sm-10">
          <h4><%= @blog.title %></h4>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <label class="form-title pull-right">Category</label>
        </div>
        <div class="col-sm-10">
          <h4><%= @blog.category %></h4>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <label class="form-title pull-right">Publish</label>
        </div>
        <div class="col-sm-5">
          <h4><%= @blog.publish %></h4>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <label class="form-title pull-right">Published?</label>
        </div>
        <div class="col-sm-10">
          <h4><%= @blog.published %></h4>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <label class="form-title pull-right">Promoted?</label>
        </div>
        <div class="col-sm-10">
          <h4><%= @blog.promoted %></h4>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <label class="form-title pull-right">Image</label>
        </div>
        <div class="col-sm-3">
          <% if @blog.image.length > 0 %>
            <img src=<%= @blog.image.url %> alt="image" width=100, height=100>
          <% else %>
            <img src="/assets/author_avatar" alt="image" width=100, height=100>
          <% end %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <label class="form-title pull-right">Body</label>
        </div>
        <div class="col-sm-10">
          <%= @blog.body.html_safe %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <label class="form-title pull-right">Author name</label>
        </div>
        <div class="col-sm-5">
          <h4><%= @blog.author_name %></h4>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <label class="form-title pull-right">Author position</label>
        </div>
        <div class="col-sm-5">
          <h4><%= @blog.author_position %></h4>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group" data-no-turbolink>
        <div class="col-sm-2">
          <label class="form-title pull-right">Author age</label>
        </div>
        <div class="col-sm-3">
          <h4><%= @blog.author_age %></h4>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <label class="form-title pull-right">Author avatar</label>
        </div>
        <div class="col-sm-3">
          <% if @blog.author_avatar.length > 0 %>
            <img src=<%= @blog.author_avatar.url %> alt="image" width=100, height=100>
          <% else %>
            <img src="/assets/author_avatar" alt="image" width=100, height=100>
          <% end %>
        </div>
      </div>
    </div>
</div>