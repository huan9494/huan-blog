<div class="panel-body">
  <%= form_for [:admin, @blog] do |f| %>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :title, class: "form-title pull-right" %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :title, autofocus: true, class: 'form-control' %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :category, class: "form-title pull-right" %>
        </div>
        <div class="col-sm-10">
          <%= f.select :category, options_for_select(["category1", "category2", "category3"]),class: 'form-control' %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :publish, class: "form-title pull-right" %>
        </div>
        <div class="col-sm-5">
          <%= f.text_field :publish, class: 'form-control', id: "date_field" %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :published, class: "form-title pull-right" %>
        </div>
        <div class="col-sm-10">
          <%= f.check_box :published %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :promoted, class: "form-title pull-right" %>
        </div>
        <div class="col-sm-10">
          <%= f.check_box :promoted %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :image, class: "form-title pull-right" %>
        </div>
        <div class="col-sm-3">
          <%#= image_tag(@blog.image.thumb.url) %>
          <%= f.file_field :image, class: "form-control" %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :body, class: "form-title pull-right" %>
        </div>
        <div class="col-sm-10">
          <div><%= link_to "<b>Preview</b>".html_safe, "#" %></div>
          <br>
          <div>
            <%= f.cktext_area :body, class: "form-control" %>
          </div>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :author_name, class: "form-title pull-right" %>
        </div>
        <div class="col-sm-5">
          <%= f.text_field :author_name, class: "form-control" %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :author_position, class: "form-title pull-right" %>
        </div>
        <div class="col-sm-5">
          <%= f.text_field :author_position, class: "form-control" %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :author_age, class: "form-title pull-right" %>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :author_age, type: "number", class: "form-control" %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-2">
          <%= f.label :author_avatar, class: "form-title pull-right" %>
        </div>
        <div class="col-sm-3">
          <%#= image_tag(@blog.image.thumb.url) %>
          <%= f.file_field :author_avatar, class: "form-control" %>
        </div>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="form-group col-sm-2 col-sm-offset-5">
        <div class="col-sm-6">
          <%= link_to "List", "#", class: "btn btn-default" %>
        </div>
        <div class="col-sm-6">
          <%= f.button "Submit", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <br>
  <% end %>
</div>